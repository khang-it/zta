<h1 class="text-2xl font-bold mb-4">Chỉnh sửa sản phẩm</h1>
<form action="/products/edit/{{product.id}}" method="POST" class="space-y-4">
    <div>
        <label for="name" class="block font-bold">Tên sản phẩm</label>
        <input type="text" id="name" name="name" value="{{product.name}}" class="border border-gray-300 p-2 w-full">
    </div>
    <div>
        <label for="price" class="block font-bold">Giá</label>
        <input type="number" id="price" name="price" value="{{product.price}}"
            class="border border-gray-300 p-2 w-full">
    </div>
    <div>
        <label for="description" class="block font-bold">Mô tả</label>
        <textarea id="description" name="description"
            class="border border-gray-300 p-2 w-full">{{product.description}}</textarea>
    </div>
    <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded">Lưu</button>
</form>