<h1 class="text-2xl font-bold mb-4">Danh sách sản phẩm</h1>
<a href="/products/add" class="bg-blue-500 text-white px-4 py-2 rounded">Thêm sản phẩm</a>
<table class="table-auto border-collapse border border-gray-500 mt-4 w-full">
    <thead>
        <tr>
            <th class="border border-gray-500 px-4 py-2">ID</th>
            <th class="border border-gray-500 px-4 py-2">Tên</th>
            <th class="border border-gray-500 px-4 py-2">Giá</th>
            <th class="border border-gray-500 px-4 py-2">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td class="border border-gray-500 px-4 py-2">{{this.id}}</td>
            <td class="border border-gray-500 px-4 py-2">{{this.name}}</td>
            <td class="border border-gray-500 px-4 py-2">{{this.price}}</td>
            <td class="border border-gray-500 px-4 py-2">
                <a href="/products/edit/{{this.id}}" class="text-blue-500">Sửa</a>
                <form action="/products/delete/{{this.id}}" method="POST" class="inline">
                    <button type="submit" class="text-red-500">Xoá</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>