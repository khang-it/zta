<h1 class="text-2xl font-bold mb-4">Thêm sản phẩm mới</h1>
<form action="/products/add" method="POST" class="space-y-4">
    <div>
        <label for="name" class="block font-bold">Tên sản phẩm</label>
        <input type="text" id="name" name="name" class="border border-gray-300 p-2 w-full">
    </div>
    <div>
        <label for="price" class="block font-bold">Giá</label>
        <input type="number" id="price" name="price" class="border border-gray-300 p-2 w-full">
    </div>
    <div>
        <label for="description" class="block font-bold">Mô tả</label>
        <textarea id="description" name="description" class="border border-gray-300 p-2 w-full"></textarea>
    </div>
    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Thêm</button>
</form>